user function xCgsProxNum()  
LOCAL rArea	    := getarea()
local cCod 		:= GETSXENUM("ZA4","ZA4_CODCARG") 
local lExist 	:= .T. 	 
LOCAL cTabela	:= GetNextAlias()

WHILE lExist
	BEGINSQL ALIAS cTabela
		SELECT ZA4_CODCARG FROM %TABLE:ZA4%
		WHERE %NOTDEL% AND ZA4_CODCARG = %EXP:cCod% AND ZA4_FILIAL = %EXP:XFILIAL('ZA4')%
	ENDSQL
	IF (cTabela)->(EOF())
		lExist := .F. 
	ELSE 
		ConfirmSX8()
		lExist 	:= .T.
		cCod 	:= GETSXENUM("ZA4","ZA4_CODCARG") 
	ENDIF
	(cTabela)->(dbclosearea())
ENDDO
restarea(rArea)
return(cCod)

