//Criando a função ExcluiDados

Static Function Excluidados()

    procregua(len(aCols)+1)
    dbselectarea(cAlias2)
    dbsetorder(1)
    dbseek(xfilial(cAlias2)+(cAlias1)->Z4_CODROT)
    do while .not. eof() .and. (cAlias2)->Z5_FILIAL == xfilial(cAlias2) .and. (cAlias2)->Z5_CODROT==(cAlias1)->Z4_CODROT
        incproc()
        
        Reclock(cAlias2,.F.)
        DbDelete()
        Msunlock()
        
        dbskip()
        
    enddo

    dbselectarea(cAlias1)
    dbsetorder(1)
    incproc()

    Reclock(cAlias1,.F.)
    DbDelete()
    Msunlock()

return


static function Md3TudOk()
    Local lRet:= .T.
    Local i:=0
    Local nDel :=0

    for i:=1 to len(aCols)
        if aCols[i,len(aHeader)+1]
            nDel++
        endif
    next

    if nDel == len(aCols)
        Msginfo("Para excluir todos os itens, utilize a opção EXCLUIR",cCadastro)
        lRet := .F.
    endif
return(lRet)



