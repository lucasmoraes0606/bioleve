static function ValidLin() 
    LOCAL nRet 		:= .T.  
    LOCAL rArea	  	:= GETAREA() 
    local cChave 	:= ACOLS[N,2]+ACOLS[N,3]+ACOLS[N,5]   

    local cMsg		:= ''

    if M->Z4_TIPO == '3'
        RETURN .T.
    endif

    if empty(aCols[N,2])
        cMsg += "Z5_EST - Estado"+ENTER
    endif
    if empty(aCols[N,3])
        cMsg += "Z5_CODMUN - Código do Município"+ENTER
    endif

    if !empty(cMsg)
        MsgAlert('Preencha os campos obrigatórios:'+ENTER+cMsg)
        return(.F.)
    endif
            
    IF M->Z4_BAIRRO == 'S' .AND. EMPTY(ACOLS[N,5])
        MSGINFO("Para rotas que consideram bairro é necessario informar o campo BAIRRO")
        nRet := .F. 
    ENDIF            

    cQuery := " select  Z5_CODROT AS CODROT from  "+RETSQLNAME("SZ5") 		  
    cQuery += "  where D_E_L_E_T_ <> '*' 

    IF M->Z4_BAIRRO == 'S'     
        cQuery += "	and Z5_EST+Z5_CODMUN+Z5_CODBAIR = '"+alltrim(cChave)+"'"  
    else          
        cQuery += "	and Z5_EST+Z5_CODMUN = '"+substr(alltrim(cChave),1,7)+"'" 
    endif     

    ChangeQuery(cQuery)
    dbUseArea(.T.,"TOPCONN",TcGenQry(,,cQuery),"TM1",.T.,.T.)    

    if !EMPTY(TM1->CODROT).and. TM1->CODROT <> M->Z4_CODROT  .and. !acols[n,len(aheader)+1]
        ALERT("REGISTRO PERTENCE A ROTA "+TM1->CODROT+".Verifique!")   
        nRet := .F. 	
    endif  

    TM1->(DbCloseArea()) 
    restarea(rArea)
return(nRet)
